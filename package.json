{
  "name": "node-amqp-handler",
  "version": "0.0.1",
  "description": "",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "build": "npm run build:clean && npm run build:generate",
    "build:clean": "rm -rf ./build",
    "build:generate": "tsc --project ./tsconfig.build.json",
    "test": "jest --config=jest.json",
    "test:watch": "npm run test -- --watch",
    "test:ci": "jest --config=jest.ci.js",
    "test:integration": "jest --config=jest.in.js",
    "test:integration:watch": "npm run test:integration -- --watch",
    "test:integration:ci": "npm run test:integration -- --verbose",
    "test:functional": "jest --runInBand --config=jest.fu.js; echo ''",
    "test:functional:watch": "jest --runInBand --config=jest.fu.js --watch; echo ''",
    "test:functional:ci": "jest --runInBand --config=jest.fu.js --verbose",
    "pretest:functional": "docker-compose up -d && sleep 30",
    "pretest:functional:watch": "docker-compose up -d && sleep 30",
    "posttest:functional": "docker-compose down -v",
    "posttest:functional:watch": "docker-compose down -v",
    "test:all": "npm run test && npm run test:integration && npm run test:functional",
    "lint": "npm run prettier && npm run lint:check",
    "lint:check": "tslint --project ./tsconfig.json --config ./tslint.json --format codeFrame",
    "lint:ci": "tslint --project ./tsconfig.json --config ./tslint.json --format codeFrame",
    "prettier": "prettier --config './.prettierrc' --write '.prettierrc' './**/*.{ts,tsx,js,jsx,json,md,scss,yml}'",
    "prettier:ci": "prettier --config './.prettierrc' --list-different '.prettierrc' './**/*.{ts,tsx,js,jsx,json,md,scss,yml}'",
    "coverage": "npm run coverage:clean && npm run coverage:generate",
    "coverage:clean": "rm -rf ./coverage",
    "coverage:generate": "jest --config=jest.json --coverage",
    "docs": "npm run docs:clean && npm run docs:generate",
    "docs:clean": "rm -rf ./docs",
    "docs:generate": "typedoc --options './typedoc.json' './src'",
    "_preversion": "npm run lint:check && npm run test",
    "_version": "npm run build",
    "_postversion": "git push && git push --tags && npm publish && npm run build:clean"
  },
  "keywords": [],
  "author": "Kjell Die√üel <development@kettil.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.5.11",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.3",
    "@types/node": "^11.13.6",
    "jest": "^24.7.1",
    "joi": "^14.3.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^5.5.2",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "amqplib": "^0.5.3"
  },
  "peerDependencies": {
    "joi": "^14.3.1"
  }
}
